{
    "name": "addengwhitespace",
    "displayName": "addEngWhitespace",
    "description": "This is a Visual Studio Code extension which add English words whitespace among Chinese words in full text.",
    "version": "1.0.0",
    "icon": "img/addEngWhitespace.png",
    "license": "MIT",
    "author": {
        "name": "Charles Wan",
        "url": "https://github.com/charliewin"
    },
    "bugs": {
        "url": "https://github.com/charliewin/vscode-addEngWhitespace/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/charliewin/vscode-addEngWhitespace.git"
    },
    "keywords": [
        "chinese",
        "english",
        "space"
    ],
    "homepage": "https://github.com/charliewin/vscode-addEngWhitespace",
    "publisher": "CharlesWan",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.addEngWhitespace"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.addEngWhitespace",
                "title": "Space English Words"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.addEngWhitespace"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.addEngWhitespace",
                "key": "ctrl+m s"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Pangu Configuration",
            "properties": {
                "pangu.auto_space_on_save": {
                    "type": "boolean",
                    "default": false,
                    "description": "Auto add whitespace for your inputs"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/pangu": "^3.3.0",
        "pangu": "^3.3.0"
    }
}
